# ==========================================
# Birthday Bot - Environment Configuration
# ==========================================

# ====================
# REQUIRED SETTINGS
# ====================

# Your WhatsApp number in JID format
# Format: [country_code][phone_number]@s.whatsapp.net
# Example: 919999999999@s.whatsapp.net (for +91 9999999999)
OWNER_NUMBER=919999999999@s.whatsapp.net

# Optional: Your WhatsApp LID (for newer WhatsApp accounts)
# Only needed if you're using the new LID format
# Check by sending: Bot, checkid
# Format:xxxxxxxxxx@lid
# Leave empty if not using LID or if unsure
# OWNER_LID=1836486XXXX9443@lid


# ====================
# SECURITY SETTINGS
# ====================

# Require whitelist for ALL commands (including help, checkid)
# Options: true | false
# Default: true (recommended for security)
#
# true  = Only owner + whitelisted users can use ANY command (SECURE)
#        - Maximum security, bot stays hidden from unauthorized users
#        - Set this AFTER you've set up whitelist
#
# false = Anyone can use help/checkid, other commands need whitelist (SETUP MODE)
#        - Useful for initial setup to check your ID
#        - Use temporarily, then switch to true
#
# RECOMMENDED SETUP:
# 1. Set to false initially
# 2. Use "Bot, checkid" to get your WhatsApp ID
# 3. Add yourself to whitelist if not owner
# 4. Change to true for maximum security
REQUIRE_WHITELIST=true


# ====================
# OPTIONAL SETTINGS
# ====================

# Command prefix for bot commands
# Default: Bot,
# Users will use: "Bot, help" to interact with the bot
COMMAND_PREFIX=Bot,

# Debug mode - shows detailed console logs
# Options: true | false
# Default: false
# Set to true for development, false for production
DEBUG_MODE=false

# Logging mode
# Options: file | console | disabled
# Default: disabled
# - file: Logs to wa-logs.txt (recommended for production)
# - console: Pretty logs in terminal (recommended for development)
# - disabled: No logs (recommended for lowest resource usage)
LOGGING_MODE=disabled


# ====================
# FILE PATHS
# ====================

# Directory for WhatsApp authentication session
# Default: ./auth_info_baileys
# This folder stores your WhatsApp session
# IMPORTANT: Add this to .gitignore!
AUTH_STATE_DIR=./auth_info_baileys

# Log file path (when LOGGING_MODE=file)
# Default: ./wa-logs.txt
LOG_FILE=./wa-logs.txt


# ====================
# BROWSER SETTINGS
# ====================

# Browser name shown in WhatsApp "Linked Devices"
# Default: Birthday Bot
BAILEYS_BROWSER_NAME=Birthday Bot

# Browser version
# Default: 1.0.0
BAILEYS_BROWSER_VERSION=1.0.0
